!!!
%html
  %head
    %title LeagueTrainer
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        %ul.nav.navbar-nav.navbar_right.pull-right
          - if current_user
            %li= link_to "#{current_user.first_name} #{current_user.last_name}", user_path("#{current_user.id}")
            %li= link_to "Sign Out", signout_path, class: "ul nav"
          - else
            %li= link_to "Sign Up", signup_path
            %li= link_to "Sign In", signin_path
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .home_button
            = link_to "League Tracker", root_path, class: "navbar-brand"
        .navbar-collapse.collapse
        / /.navbar-collapse
    .container
      = yield
    .container
      %footer
        %p &copy; Mello Incorporated 2014
        .col-md-4
          %p
            = link_to_unless_current "Champions", champions_path
            |
            = link_to_unless_current "Items", items_path
            |
