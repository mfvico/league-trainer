<div class="well">
<%= form_for(@user, html: {class: "form-horizontal"})  do |f| %>
  <div class="field form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
    <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
    <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :summoner, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
    <%= f.text_field :summoner %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
    <%= f.email_field :email %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
    <%= f.password_field :password %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
    <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <% if @new_user == true %>
  <div class="col-sm-offset-2">
    <%= f.submit 'Create User', class: "btn btn-primary" %>
  </div>
  <% end %>

  <% if @edit_user == true %>
    <div class="col-sm-offset-2">
      <%= f.submit 'Update User', class: "btn btn-primary" %>
    </div>
    <br>
  <% end %>


<% end %>
</div>
